@model Noodle.ViewModels.ClientFormViewModel
@{
    ViewBag.Title = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Guardar cliente</h2>

@using (Html.BeginForm("Save", "Clients"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Clients.Nombre)
        @Html.TextBoxFor(m => m.Clients.Nombre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Clients.Cedula)
        @Html.TextBoxFor(m => m.Clients.Cedula)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Clients.Telefono)
        @Html.TextBoxFor(m => m.Clients.Telefono)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Clients.Email)
        @Html.TextBoxFor(m => m.Clients.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Clients.Direccion)
        @Html.TextBoxFor(m => m.Clients.Direccion)
    </div>
    @Html.HiddenFor(m => m.Clients.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Guardar</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}