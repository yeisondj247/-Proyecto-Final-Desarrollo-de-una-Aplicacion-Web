@{ 

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Inventario</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chart")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink( "Inventario" , "Index" , "Home" , new { area = "" } , new { @class = "navbar-brand" } )
            </div>
            <div class="navbar-collapse collapse">
                @if ( Session[ "login" ] != null )
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink( "Inicio" , "Index" , "Home" )</li>
                        <li>@Html.ActionLink( "Productos" , "Index" , "Products" )</li>
                        <li>@Html.ActionLink( "Clientes" , "Index" , "Clients" )</li>
                        <li>@Html.ActionLink( "Vendedores" , "Index" , "Sellers" )</li>
                        <li>@Html.ActionLink( "Facturas" , "Index" , "Bills" )</li>
                        <li>@Html.ActionLink( "Acerca de" , "About" , "Home" )</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink( "!Bienvenido!" , "Index" , "Admin" )</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink( "Acerca de" , "About" , "Home" )</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink( "Ingresar" , "Index" , "Login" )</li>
                    </ul>
                }
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Inventario</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/newstyle")
    @RenderSection("scripts", required: false)
</body>
</html>
