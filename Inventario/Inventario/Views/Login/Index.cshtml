@model Noodle.ViewModels.LoginFormViewModel
@{
    ViewBag.Title = "Ingresar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Admin Login</h2>
    <img src="~/Images/admin-icon.png" />
    @if (Model.Id == 404)
    {
        <div class="alert alert-danger" role="alert">
            Datos de ingreso incorrectos.
        </div>
    }
    @using (Html.BeginForm("Validate", "Login"))
    {
        <div class="form-group">
            @Html.TextBoxFor(m => m.Config.User, new { @placeholder = "Usuario"})
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Config.Pass, new { @placeholder = "Contraseña" })
        </div>
        @Html.HiddenFor(m => m.Config.Id)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Ingresar</button>
    }
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}